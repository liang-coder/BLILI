message ReqUser {
  int32 attention = 1;            // 是否关注 UP 主（0=未关注, 1=已关注）
  int32 guest_attention = 2;      // 游客关注状态（用于未登录场景）
  int32 favorite = 3;             // 是否收藏该视频（0=未收藏, 1=已收藏）
  int32 like = 4;                 // 是否点赞（0=未点, 1=已赞）
  int32 dislike = 5;              // 是否点踩（通常为 0）
  int32 coin = 6;                 // 投币数量（0～2，B站最多投2枚）
  int32 attention_level = 7;      // 关注等级（如 0=普通, 1=特别关注）
  int32 fav_season = 8;           // 是否追番（针对合集/剧集）

  Button elec_plus_btn = 9;       // 充电专属按钮配置
  ELecPlus elec_plus = 10;        // 充电专属状态
}

message ArchiveStat {
  StatInfo view_vt = 11;   // 格式化后的播放量展示（如 "12.3万"）
}

message Tab {
  string background = 1;                // 背景图 URL 或颜色值（如 "#FFFFFF"）
  int32 otype = 2;                      // 对象类型（2=视频, 4=音频, 6=番剧等）
  int64 oid = 3;                        // 对象 ID（如 aid、season_id）
  string uri = 4;                       // 点击跳转链接（如 bilibili://video/av123）
  int32 style = 5;                      // Tab 样式（0=普通, 1=带红点, 2=高亮）
  string text = 6;                      // Tab 文案，如 “简介”、“评论”、“相关”
  string text_color = 7;                // 默认文字颜色（如 "#999999"）
  string text_color_selected = 8;       // 选中时文字颜色（如 "#00A1D6"）
  string pic = 9;                       // 图标 URL（可选，用于图标+文字 Tab）
  int64 id = 10;                        // Tab 唯一 ID（用于埋点或逻辑判断）
  google.protobuf.Any ad_tab_info = 11; // 广告扩展信息（通常为空或特定活动数据）
}

message subTFPanel {
  string right_btn_img = 1;          // 右侧按钮图标 URL
  string right_btn_text = 2;         // 按钮文案，如 “分享”
  string right_btn_text_color = 3;   // 按钮文字颜色（如 "#00A1D6"）
  string right_btn_link = 4;         // 点击跳转链接（如 bilibili://share/...）
  string main_label = 5;             // 主标签文案（如 “分享到”）
  string operator = 6;               // 操作标识（用于埋点或逻辑判断，如 "share_click"）
}

message TFPanelCustomized {
  string right_btn_img = 1;
  string right_btn_text = 2;
  string right_btn_text_color = 3;
  string right_btn_link = 4;
  string main_label = 5;             // 主面板标题（如 “更多操作”）
  string operator = 6;               // 主操作标识

  map<string, SubTFPanel> sub_panel = 7;  // 子面板映射（key 为 panel_id 或 scene）
}

message UgcSeason {
  int64 id = 1;                          // 合集 ID
  string title = 2;                      // 合集标题
  string cover = 3;                      // 封面图 URL
  string intro = 4;                      // 简介文案

  repeated Section sections = 5;         // 分集列表（Section）
  UgcSeasonStat stat = 6;                // 合集统计数据（旧版）

  string label_text = 7;                 // 标签文案（如 “连载中”、“完结”）
  string label_text_color = 8;           // 标签文字颜色（日间）
  string label_bg_color = 9;             // 标签背景色（日间）
  string label_text_night_color = 10;    // 标签文字颜色（夜间）
  string label_bg_night_color = 11;      // 标签背景色（夜间）

  string desc_right = 12;                // 右侧描述文案（如更新时间）
  int64 ep_count = 13;                   // 总集数
  int32 season_type = 14;                // 合集类型（0=普通, 1=付费, 2=活动）
  bool show_continual_button = 15;       // 是否显示“继续观看”按钮

  int64 ep_num = 16;                     // 当前最新集数
  bool season_pay = 17;                  // 是否为付费合集
  GoodsInfo goods_info = 18;             // 商品信息（若为付费）
  ButtonStyle pay_button = 19;           // 付费按钮样式

  string label_text_new = 20;            // 新版标签文案（可能用于 A/B 测试）
  UgcSeasonActivity activity = 21;       // 活动扩展信息

  repeated string season_ability = 22;   // 合集能力标识（如 ["pay", "comment", "share"]）
  UgcSeasonStatV2 stat_v2 = 23;          // 合集统计数据（新版）
}

message UserActivity {
  int32 user_state = 1;             // 用户活动状态（0=未参与, 1=进行中, 2=已完成）
  int64 last_checkin_date = 2;      // 上次打卡日期（时间戳，毫秒）
  int32 checkin_today = 3;          // 今日是否已打卡（0=否, 1=是）
  int32 user_day_count = 4;         // 累计打卡天数
  int32 user_view_time = 5;         // 今日观看时长（秒）
  string portrait = 6;              // 用户头像（可能用于活动页展示）
}

message SeasonShow {
  string button_text = 1;       // 主按钮文案（如 “立即参与”）
  string join_text = 2;         // 参与说明（如 “参与活动，赢取大会员”）
  string rule_text = 3;         // 活动规则（如 “每日观看满10分钟即可打卡”）
  string checkin_text = 4;      // 打卡成功提示（如 “打卡成功！已连续3天”）
  string checkin_prompt = 5;    // 打卡引导（如 “再看2分钟即可打卡”）
}

message UgcSeasonActivity {
  int32 type = 1;                     // 活动类型（1=打卡, 2=投稿, 3=投票）
  int64 oid = 2;                      // 关联对象 ID（如 season_id）
  int64 activity_id = 3;              // 活动唯一 ID
  string title = 4;                   // 活动标题（如 “春季追剧打卡”）
  string intro = 5;                   // 活动简介

  int32 day_count = 6;                // 活动总天数（如 7 天）
  int32 user_count = 7;               // 参与人数

  int64 join_deadline = 8;            // 报名截止时间（毫秒）
  int64 activity_deadline = 9;        // 活动结束时间（毫秒）

  int32 checkin_view_time = 10;       // 单日打卡所需观看时长（秒）

  bool new_activity = 11;             // 是否为新活动（用于红点提示）
  UserActivity user_activity = 12;    // 当前用户活动状态
  SeasonShow season_show = 13;        // 活动 UI 文案配置
}

message GoodsInfo {
  string goods_id = 1;        // 商品 ID（如 "ugc_season_123"）
  int32 category = 2;         // 商品类别（1=视频, 2=合集, 3=课程）
  int64 goods_price = 3;      // 商品价格（单位：分，如 9900 = 99 元）
  int32 pay_state = 4;        // 支付状态（0=未购买, 1=已购买, 2=试看中）
  string goods_name = 5;      // 商品名称（如 “Python 入门教程”）
  string price_fmt = 6;       // 格式化价格文案（如 “¥99.00”）
}

message ButtonStyle {
  string text = 1;                // 按钮文案（如 “立即购买”）
  string text_color = 2;          // 文字颜色（日间）
  string text_color_night = 3;    // 文字颜色（夜间）
  string bg_color = 4;            // 背景色（日间）
  string bg_color_night = 5;      // 背景色（夜间）
  string jump_link = 6;           // 点击跳转链接（如 bilibili://pay/...）
}

message UgcSeasonStatV2 {
  StatInfo view_vt = 11;   // 格式化播放量（如 "12.3万次观看"）
}

message StatInfo {
  int32 icon = 1;          // 图标类型 ID（用于选择本地图标资源，如播放/点赞图标）
  string text = 2;         // 带格式化的展示文本（如 "12.3万"、"999+"）
  string pure_text = 3;    // 纯文本（无单位/缩写，可能用于无障碍或埋点）
}

message UgcSeasonStat {
  int64 season_id = 1;      // 合集 ID
  int32 view = 2;           // 播放量
